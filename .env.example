# ============================================================================
# AGENTGUARD - ENVIRONMENT VARIABLES
# ============================================================================
#
# Copy this file to .env and set your values
#
# ============================================================================

# API Key (REQUIRED for production)
# Generate with: openssl rand -hex 32
AGENTGUARD_API_KEY=your-secret-api-key-here

# Environment
AGENTGUARD_ENV=production

# Port
AGENTGUARD_PORT=5000

# Log level
AGENTGUARD_LOG_LEVEL=INFO

# Database paths (inside container)
AGENTGUARD_DB_PATH=/app/data/agentguard.db
AGENTGUARD_TELEMETRY_DB_PATH=/app/data/telemetry.db